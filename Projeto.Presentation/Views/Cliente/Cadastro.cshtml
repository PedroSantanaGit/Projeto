@model Projeto.Presentation.Models.ClienteCadastroViewModel
@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Cadastro de Clientes</h4>

@using (Html.BeginForm("CadastrarCliente", "Cliente", FormMethod.Post))
{
    <label>Nome:</label>
    @Html.TextBoxFor(model => model.Nome,
            new { @class = "form-control col-md-4", placeholder = "Digite aqui" })
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.Nome)
    </div>
    <br />
    <label>Email:</label>
    @Html.TextBoxFor(model => model.Email,
            new { @class = "form-control col-md-4", placeholder = "Digite aqui" })
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.Email)
    </div>
    <br />
    <label>CPF:</label>
    @Html.TextBoxFor(model => model.CPF,
            new { @class = "form-control col-md-4", placeholder = "Digite aqui" })
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.CPF)
    </div>
    <br />
    <label>Nascimento:</label>
    @Html.TextBoxFor(model => model.Nascimento,
            new { @class = "form-control col-md-4", placeholder = "Digite aqui" })
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.Nascimento)
    </div>
    <br />
    <label>CNPJ:</label>
    @Html.TextBoxFor(model => model.CNPJ,
            new { @class = "form-control col-md-4", placeholder = "Digite aqui" })
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.CNPJ)
    </div>
    <br />
    <label>Endereço:</label>
    @Html.TextBoxFor(model => model.Endereco,
            new { @class = "form-control col-md-4", placeholder = "Digite aqui" })
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.Endereco)
    </div>
    <br />

    <input type="submit" value="Cadastrar Cliente"
           class="btn btn-success" />
    <br />
    <br />

    <strong>@ViewBag.Mensagem</strong>

}