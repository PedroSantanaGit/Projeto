@model Projeto.Presentation.Models.ProdutoEdicaoViewModel

@{
    ViewBag.Title = "Edicao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Edição de Produtos</h4>

@using (Html.BeginForm("AtualizarProduto", "Produto", FormMethod.Post))
{
    <label>Código do Produto:</label>
    @Html.TextBoxFor(model => model.IdProduto,
        new { @class = "form-control col-md-4", @readonly = "readonly" })
    <br />

    <label>Nome do Produto:</label>
    @Html.TextBoxFor(model => model.Nome,
        new { @class = "form-control col-md-4" })
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.Nome)
    </div>
    <br />
    <label>Preço do Produto:</label>
    @Html.TextBoxFor(model => model.Nome,
        new { @class = "form-control col-md-4" })
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.Nome)
    </div>
    <br />
    <label>Quantidade em estoque:</label>
    @Html.TextBoxFor(model => model.Nome,
        new { @class = "form-control col-md-4" })
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.Nome)
    </div>
    <br />
    <label>Estoque:</label>
    @Html.DropDownListFor(model => model.IdEstoque,
                          Model.Estoques,
                          "Escolha um setor",
                          new { @class = "form-control col-md-4" })
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.IdEstoque)
    </div>
    <br />

    <input type="submit" value="Atualizar Produto"
           class="btn btn-primary" />
    <br />
    <br />

    <strong>@ViewBag.Mensagem</strong>
}
