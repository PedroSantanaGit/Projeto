@model Projeto.Presentation.Models.FornecedorCadastroViewModel
@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Cadastro de Fornecedores</h4>

@using (Html.BeginForm("CadastrarFornecedor", "Fornecedor", FormMethod.Post))
{
    <label>Nome:</label>
    @Html.TextBoxFor(model => model.Nome,
            new { @class = "form-control col-md-4", placeholder = "Digite o nome do fornecedor" })
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.Nome)
    </div>
    <br />
    <label>Email:</label>
    @Html.TextBoxFor(model => model.Email,
            new { @class = "form-control col-md-4", placeholder = "Digite o email do fornecedor" })
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.Email)
    </div>
    <br />
    <label>CNPJ:</label>
    @Html.TextBoxFor(model => model.CNPJ,
            new { @class = "form-control col-md-4", placeholder = "Digite o CNPJ do fornecedor" })
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.CNPJ)
    </div>
    <br />
    <label>Telefone:</label>
    @Html.TextBoxFor(model => model.Telefone,
            new { @class = "form-control col-md-4", placeholder = "Digite aqui" })
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.Telefone)
    </div>
    <br />
    <label>Endereço:</label>
    @Html.TextBoxFor(model => model.Endereco,
            new { @class = "form-control col-md-4", placeholder = "Digite aqui" })
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.Endereco)
    </div>
    <br />

    <input type="submit" value="Cadastrar Fornecedor"
           class="btn btn-success" />
    <br />
    <br />

    <strong>@ViewBag.Mensagem</strong>

}