@model Projeto.Presentation.Models.EstoqueEdicaoViewModel

@{
    ViewBag.Title = "Edicao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Edição de Estoque</h4>

@using (Html.BeginForm("AtualizarEstoque", "Estoque", FormMethod.Post))
{
    <label>Código do Estoque:</label>
    @Html.TextBoxFor(model => model.IdEstoque,
        new { @class = "form-control col-md-4", @readonly = "readonly" })
    <br/>

    <label>Nome do Estoque:</label>
    @Html.TextBoxFor(model => model.Nome,
        new { @class = "form-control col-md-4" })
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.Nome)
    </div>
    <br/>

    <input type="submit" value="Atualizar Estoque"
           class="btn btn-primary"/>
    <br/>
    <br/>

    <strong>@ViewBag.Mensagem</strong>
}
